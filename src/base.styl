color_konkikyo = #211E55
color_fuji = #8B81C3
color_shironeri = #FCFAF2

html.hasFontSmoothing-true
  font-family:"ヒラギノ明朝 Pro W6", "Hiragino Mincho Pro", "HGS明朝E", "ＭＳ Ｐ明朝", serif;

body
  font-family:"ヒラギノ明朝 Pro W6", "Hiragino Mincho Pro", "HGS明朝E", "ＭＳ Ｐ明朝", serif;
  font-weight 300
  background-image url(/img/texture.png)

#main_nav
  #logo
    height 24px
    img
      position relative
      top -6px
      

  
#cover
  .container
    img
      width 100%
    
    h1, h2
      color color_konkikyo    
      font-size 54px
      font-weight 300
      line-height 54px
      text-shadow 0 0 1px #bbb
    h2
      font-size 36px
      line-height 36px

    
.nav
  .nav-header
    font-size 18px
    color gray
    border 1px solid #ddd
    border-radius 5px

#footer
  height 500px
  padding-top 20px
  background color_shironeri
  -webkit-box-shadow:  0px 0px 15px 0px rgba(33, 30, 85, 0.5);
  box-shadow:  0px 0px 15px 0px rgba(33, 30, 85, 0.5);
  
.sec
  margin-top 60px
  .sec-title
    font-size 20px
    font-weight 700
  &:first-child
    margin-top 0px

.alert-warning
  font-size 14px
  padding-top 3px
  padding-bottom 3px
  margin-top 60px
  &:first-child
    margin-top 0px

.alert-info
  padding-top 15px
  padding-bottom 15px

.main-title
  font-weight 700
  border 3px solid black
  font-size 40px
  line-height 60px
  padding-left 10px

#social-link
  height 100%
  padding 0
  margin 0
  img
    height 24px
    width 24px
    -webkit-border-radius 2px
    border-radius 2px
