color_konkikyo = #211E55
color_fuji = #8B81C3
color_shironeri = #FCFAF2

html.hasFontSmoothing-true
  font-family:"ヒラギノ明朝 Pro W6", "Hiragino Mincho Pro", "HGS明朝E", "ＭＳ Ｐ明朝", serif;

body
  font-family:"ヒラギノ明朝 Pro W6", "Hiragino Mincho Pro", "HGS明朝E", "ＭＳ Ｐ明朝", serif;
  font-weight 300
  background-image url(/img/texture.png)
  -webkit-user-select none
  -khtml-user-drag none
  -khtml-user-select none
  -moz-user-select none
  -o-user-select none
  user-select none
  

#main_nav
  font-size 14px
  #logo
    height 24px
    img
      position relative
      top -6px
  
#social-link
  height 100%
  padding 0
  margin 0
  img
    height 24px
    width 24px
    -webkit-border-radius 2px
    border-radius 2px

h1
  color color_konkikyo
  font-size 30px

.span3
  overflow hidden

.corner
  float left
  position relative
  top -18px
  left -18px
  height 36px
  width 36px
  transform rotate(45deg)
  -webkit-transform rotate(45deg)
  background-color color_konkikyo

#footer
  height 200px
  padding-top 20px
  background color_shironeri
  color color_konkikyo
  -webkit-box-shadow  0px 0px 15px 0px rgba(33, 30, 85, 0.5)
  box-shadow  0px 0px 15px 0px rgba(33, 30, 85, 0.5)
  #cc
    margin-top 16px

